{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "Voice Note AI",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": { "open": true },
      "clipboard": { "all": true },
      "globalShortcut": { "all": true },
      "notification": { "all": true },
      "fs": { "all": true, "scope": ["$APP/*", "$DOWNLOAD/*", "$DOCUMENT/*"] },
      "path": { "all": true },
      "dialog": { "all": true }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.voicenoteai.app",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    },
    "windows": [{ "fullscreen": false, "resizable": true, "title": "Voice Note AI", "width": 800, "height": 600, "minWidth": 400, "minHeight": 300, "center": true }],
    "systemTray": { "iconPath": "icons/icon.png", "iconAsTemplate": true }
  }
}
